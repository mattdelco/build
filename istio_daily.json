{
  "steps": [
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "args": [ "./download_source_tree.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-i", "/source", "-o", "/xfer"]
    },
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "auth",
      "args": [ "./bin/daily_cloud_builder.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-i", "/source", "-o", "/xfer"]
    },
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "mixer",
      "args": [ "./bin/daily_cloud_builder.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-i", "/source", "-o", "/xfer"]
    },
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "env": [ "GOPATH=/tmp/gopath" ],
      "dir": "pilot",
      "args": [ "./bin/daily_cloud_builder.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-i", "/source", "-o", "/xfer"],
      "entrypoint": "bash"
    },
    {
      "volumes": [
	{
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "proxy",
      "args": [ "./script/daily_cloud_builder.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-i", "/source", "-o", "/xfer"]
    },
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "args": [ "store_artifacts.sh", "-d", "-b", "$BRANCH_NAME", "-p", "$PROJECT_ID", "-o", "/xfer"]
    }
  ],
  "options": {
    "machineType": "N1_STANDARD_8"
  },
  "timeout": "3600s",
  "tags": [
    "daily"
  ]
}
