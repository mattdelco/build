{
  "steps": [
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "id": "downloadSource",
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "args": [ "./download_source_tree.sh", "-u", "$_MFEST_URL", "-v", "$_VER_STRING", "-o", "/output", "-f", "version.txt", "-i", "$BUILD_ID" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "auth",
      "id": "auth",
      "waitFor": [
	"downloadSource"
      ],
      "args": [ "./bin/daily_cloud_builder2.sh", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "mixer",
      "id": "mixer",
      "waitFor": [
	"downloadSource"
      ],
      "args": [ "./bin/daily_cloud_builder2.sh", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "env": [ "GOPATH=/tmp/gopath" ],
      "dir": "pilot",
      "id": "pilot",
      "waitFor": [
	"downloadSource"
      ],
      "args": [ "./bin/daily_cloud_builder2.sh", "-o", "/output" ],
      "entrypoint": "bash"
    },
    {
      "volumes": [
	{
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "dir": "proxy",
      "id": "proxy",
      "waitFor": [
	"downloadSource"
      ],
      "args": [ "./script/daily_cloud_builder2.sh", "-o", "/output" ]
    },
    {
      "volumes": [
        {
          "name": "buildoutput",
          "path": "/output"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "id": "storeArtifacts",
      "waitFor": [
	"auth",
	"mixer",
	"pilot",
	"proxy"
      ],
      "args": [ "./store_artifacts.sh", "-p", "$_GS_BUCKET", "-s", "$_SUBDIR_TO_STORE", "-v", "$_VER_STRING", "-o", "/output", "-f", "version.txt", "-i", "$BUILD_ID" ]
    }
  ],
  "options": {
    "machineType": "N1_HIGHCPU_32"
  },
  "timeout": "3600s"
}
