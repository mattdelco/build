{
  "steps": [
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "args": [ "./download_source_tree.sh", "-u", "$_MFEST_REPO_URL", "-b", "$_BRANCH_TO_BUILD", "-m", "$_MFEST_FILE", "-o", "/xfer", "-v", "version.txt", "-i", "$BUILD_ID" ]
    },
    {
      "volumes": [
        {
          "name": "buildxfer",
          "path": "/xfer"
        }
      ],
      "name": "gcr.io/istio-io/istio-builder:0.3.2",
      "args": [ "./store_artifacts.sh", "-b", "$_BRANCH_TO_BUILD", "-p", "$_GS_BUCKET", "-o", "/xfer", "-v", "version.txt" ]
    }
  ],
  "timeout": "3600s",
  "tags": [
    "daily"
  ]
}
